    <div class="wrapper">
        <div class="section">
         <div class="top_navbar">
             <div class="main_content">
                 <a href="#">
                     <i class="fas fa-bars"> Dashboard</i>
                 </a>
             </div>
         </div>
         <div class="container">

            <div class="content" id="home-content" style="display: block;">
                <h3>Your Profile:</h3>
                <p><b>City ID:&emsp;</b> <valign><%=city_committee.city_id%></valign></p>
                <p><b>City:</b>&emsp; <valign><%=city_committee.city_name%></valign></p>
                <p><b>Officer Name:&emsp;</b> <valign><%=city_committee.officer_name%></valign></p>
            </div>
              

            <div class="content" id="school-content">
                <h3> Schools </h3>
                <table border="1" id="tab">
                    <thead>
                      <tr><b>
                        <th>School ID</th>
                        <th>School Name</th>
                        
                      </tr></b>
                      <%for (let i = 0; i < schools.length; i++){%>
                            <tr>
                                <td><%= schools[i].school_id %></td>
                                <td><%= schools[i].school_name %></td>
                            </tr>
                        <%}%>
                    </thead>
                </table>
            </div>
            <div class="content" id="items-content">
                <h3>Items and Cost</h3>
                <table border="1" id="tab">
                    <thead>
                      <tr><b>
                        <th>Item Name</th>
                        <th>Item Prices</th>
                        
                      </tr></b>
                      <%for (let i = 0; i < items.length; i++){%>
                            <tr>
                                <td><%= items[i].item_name %></td>
                                <td><%= items[i].price %></td>
                            </tr>
                        <%}%>
                    </thead>
                </table>
            </div> 

            <div class="content" id="grieve-content">
                <h3>Student Grievances</h3>
                <table border="1" id="tab">
                    <thead>
                      <tr><b>
                        <th>Complaint ID</th>
                        <th>School ID</th>
                        <th>Description</th>
                        
                      </tr></b>
                      <%for (let i = 0; i < grieve.length; i++){%>
                            <tr>
                                <td><%= grieve[i].complaint_number %></td>
                                <td><%= grieve[i].school_id %></td>
                                <td><%= grieve[i].complaint_details %></td>
                            </tr>
                        <%}%>
                    </thead>
                </table>
            </div>

    
        </div>
     </div>
         <div class="sidebar">
             <div class="profile">
                <img src="/cityLogo.jpg" alt="profile_picture">
                 <h3 style="text-transform:uppercase"><%= city_committee.city_name%></h3>
                 <p>City ID: <%= city_committee.city_id%></p>
             </div>
             <ul>
                 <li>
                     <a href="#" class="active" id="home" onclick="showContent('home'); return false;">
                         <span class="icon"><i class="fas fa-home"></i></span>
                         <span class="item">Home</span>
                     </a>
                 </li>
                 <li>
                     <a href="#" id="school" onclick="showContent('school'); return false;">
                         <span class="icon"><i class="fa fa-building"></i></span>
                         <span class="item">School List</span>
                     </a>
                 </li>
                 <li>
                     <a href="#" id="items" onclick="showContent('items'); return false;">
                         <span class="icon"><i class="fa fa-list-ol"></i></span>
                         <span class="item">Item List</span>
                     </a>
                 </li>
                 <li>
                     <a href="#" id="grieve" onclick="showContent('grieve'); return false;">
                         <span class="icon"><i class="fa fa-envelope-open"></i></span>
                         <span class="item">Grievances</span>
                     </a>
                 </li>
                 <li>
                     <a href="/logout">
                         <span class="icon"><i class="fas fa-power-off"></i></span>
                         <span class="item">Logout</span>
                     </a>
                 </li>
             </ul>
         </div>
         
     </div>
  

    <script>
        function logout() {
			window.location.href = '/logout'};
        
        
        var main_content = document.querySelector(".main_content");
	    main_content.addEventListener("click", ()=>{
		document.querySelector("body").classList.toggle("active");
        })

        
        var lastClick = 'home';
        function showContent(anchorId){
            console.log("called")
            const selectedContenthiv = document.getElementById(anchorId+ '-content');
            var content = selectedContenthiv.style.display;

            var contenthivs = document.getElementsByClassName('content');
                    for (var i = 0; i < contenthivs.length; i++) {
                        contenthivs[i].style.display = 'none';
                    }

            if(lastClick == anchorId && content == 'block'){
                selectedContenthiv.style.display = 'none';}
            else
                selectedContenthiv.style.display = 'block';
            lastClick = anchorId;
        }
	
    </script>

    

    <div class="wrapper">
        <div class="section">
         <div class="top_navbar">
             <div class="main_content">
                 <a href="#">
                     <i class="fas fa-bars"> Dashboard</i>
                 </a>
             </div>
         </div>
         <div class="container">
            <div class="content" id="home-content" style="display: block; ">
                <h3>Profile</h3><br>
                <b>&emsp;District ID: &emsp;</b> <valign><%=districtPr.district_id%></valign><br>
                <b>&emsp;District Name: &emsp;</b> <valign><%=districtPr.district_name%></valign><br>
                <b>&emsp;Officer Id: &emsp;</b> <valign><%=districtPr.officer_id%></valign><br>
                <b>&emsp;Officer Name: &emsp;</b> <valign><%=districtPr.officer_name%></valign><br>
                <b>&emsp;Schools Registered: &emsp;</b> <valign><%=districtPr.schools_registered%></valign><br>
                <b>&emsp;MDM Budget Allocated: &emsp;</b> <valign><%=districtPr.mdm_budget%></valign><br>
                <b>&emsp;Budget Used: &emsp;</b> <valign><%=districtPr.total_budget%></valign><br>
            </div>
            <div class="content" id = "city-content">
                <h3>Cities information</h3><br>
                <table>
                    <tr>
                        <th>City id</th>
                        <th>City name</th>
                        <th>Officer id</th>
                        <th>Officer name</th>
                        <th>Schools registered</th>
                    </tr>
                    <%for (let i = 0 ; i < cityPr.length ; i++){%>
                        <tr>
                            <td><%=cityPr[i].city_id%></td>
                            <td><%=cityPr[i].city_name%></td>
                            <td><%=cityPr[i].officer_id%></td>
                            <td><%=cityPr[i].officer_name%></td>
                            <td><%=cityPr[i].schools_registered%></td>
                        </tr>
                    <%}%>
                </table>    
            </div>
            <div class="content" id="extrabudget-content">  
                <h3>Extra Budgets of Cities</h3><br>
                <table>
                    <tr>
                        <th>City id</th>
                        <th>Schools enrolled</th>
                        <th>Budget Allocated</th>
                        <th>MDM expenses</th>
                        <th>Extra Budget</th>
                    </tr>
                    <%for (let i = 0 ; i < extraBudgetPr.length ; i++){%>
                        <tr>
                            <td><%=extraBudgetPr[i].city_id%></td>
                            <td><%=extraBudgetPr[i].schools_enrolled%></td>
                            <td><%=extraBudgetPr[i].budget_alloted%></td>
                            <td><%=extraBudgetPr[i].mdm_expenses%></td>
                            <td><%=extraBudgetPr[i].extra_budget%></td>
                        </tr>
                    <%}%>
                </table>    
            </div> 
            <div class="content" id="grievances-content">
                <h3>Unresolved Grievances</h3><br>
                <table>
                    <tr>
                        <th>School ID</th>
                        <th>Complaint number</th>
                        <th>Date of complaint</th>
                        <th>Complaint category</th>
                        <th>Complaint details</th>
                        <th>Complaint status</th>
                        <th>Actions taken</th>
                    </tr>
                    <%for (let i = 0 ; i < grievancesPr.length ; i++){%>
                        <tr>
                            <td><%=grievancesPr[i].school_id%></td>
                            <td><%=grievancesPr[i].complaint_number%></td>
                            <td><%=grievancesPr[i].date.toString().split(" ").slice(1,4).join(" ")%></td>
                            <td><%=grievancesPr[i].category%></td>
                            <td><%=grievancesPr[i].complaint_details%></td>
                            <td><%=grievancesPr[i].status%></td>
                            <td><%=grievancesPr[i].actions_taken%></td>
                        </tr>
                    <%}%>
                </table>    
            </div>   
            <div class="content" id="menu-content">
                <h3>Menu</h3><br>
                <table>
                    <tr>
                        <th>Day</th>
                        <th>Menu</th>
                    </tr>
                    <%for (let i = 0 ; i < menuPr.length ; i++){%>
                        <tr>
                            <td><%=menuPr[i].day%></td>
                            <td><%=menuPr[i].items%></td>
                        </tr>
                    <%}%>
                </table>
            </div>
            <div class="content" id = "monthlySchoolReports-content">
                <h3>Schools Monthly Report</h3>
                <form method="post" action="/district/<%=districtPr.district_id%>/monthlySchoolReport" >
                    <label>Enter Month<small>(in number)</small>:</label>
                    <input type = "number" name = "month" placeholder="Eg:5 for May" required /><br>
                    <label>Enter Year:</label>
                    <input type = "number" name = "year" placeholder="Eg:2023" required /><br>
                    <input type="submit" value="Get Report"/><br>
                </form>
            </div>
             
    
        </div>
     </div>
         <div class="sidebar">
             <div class="profile">
